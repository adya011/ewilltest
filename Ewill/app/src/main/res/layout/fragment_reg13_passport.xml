<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moonlay.litewill.fragments.reg_member_up_maker.Reg4PassportFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="@dimen/margin_standar">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/etl_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"
                android:paddingTop="0dp">

                <EditText
                    android:id="@+id/et_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Full Name"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_dob_tit"
                    style="@style/TitleSmall"
                    android:layout_width="285dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="date"
                    android:text="Date of Birth" />

                <TextView
                    android:id="@+id/tv_dob"
                    android:layout_width="285dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/tv_dob_tit"
                    android:gravity="center_vertical"
                    android:ems="10"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/datepicker"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@id/tv_dob"
                    android:layout_alignTop="@id/tv_dob"
                    android:text="date"
                    app:srcCompat="@drawable/ic_date" />
            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/etl_pob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"
                android:paddingTop="0dp">

                <EditText
                    android:id="@+id/et_pob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Place of Birth"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            style="@style/ButtonStandard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_standar_side"
            android:layout_marginRight="@dimen/margin_standar_side"
            android:padding="10dp"
            android:text="Next" />
    </RelativeLayout>

</FrameLayout>

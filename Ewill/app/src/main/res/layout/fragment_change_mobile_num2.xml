<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.change.ChangeMobileNum2Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lay_form"
            android:layout_above="@id/button_next10"
            android:layout_marginLeft="@dimen/margin_standar"
            android:layout_marginRight="@dimen/margin_standar"
            android:layout_marginTop="@dimen/margin_standar"
            android:orientation="vertical"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/tv_confirm_sent"
                style="@style/TextViewContent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="@string/reg_verification_phone"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_timer"
                style="@style/TextViewContent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="00.30"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_resend"
                style="@style/TextViewContent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="Resend"
                android:textAlignment="center"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_1"
                    style="@style/etNumpad" />

                <EditText
                    android:id="@+id/et_2"
                    style="@style/etNumpad" />

                <EditText
                    android:id="@+id/et_3"
                    style="@style/etNumpad" />

                <EditText
                    android:id="@+id/et_4"
                    style="@style/etNumpad" />

                <EditText
                    android:id="@+id/et_5"
                    style="@style/etNumpad" />

                <EditText
                    android:id="@+id/et_6"
                    style="@style/etNumpad" />
            </LinearLayout>

            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:columnCount="3">

                <Button
                    android:id="@+id/btn_1"
                    style="@style/Numpad"
                    android:text="1" />

                <Button
                    android:id="@+id/btn_2"
                    style="@style/Numpad"
                    android:text="2" />

                <Button
                    android:id="@+id/btn_3"
                    style="@style/Numpad"
                    android:text="3" />

                <Button
                    android:id="@+id/btn_4"
                    style="@style/Numpad"
                    android:text="4" />

                <Button
                    android:id="@+id/btn_5"
                    style="@style/Numpad"
                    android:text="5" />

                <Button
                    android:id="@+id/btn_6"
                    style="@style/Numpad"
                    android:text="6" />

                <Button
                    android:id="@+id/btn_7"
                    style="@style/Numpad"
                    android:text="7" />

                <Button
                    android:id="@+id/btn_8"
                    style="@style/Numpad"
                    android:text="8" />

                <Button
                    android:id="@+id/btn_9"
                    style="@style/Numpad"
                    android:text="9" />

                <Button
                    android:id="@+id/btn_0"
                    style="@style/Numpad"
                    android:layout_column="1"
                    android:text="0" />

                <Button
                    android:id="@+id/btn_bckspc"
                    style="@style/Numpad"
                    android:layout_column="2"
                    android:text="âŒ«" />
            </GridLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button_next10"
            android:layout_alignParentBottom="true"
            style="@style/ButtonStandard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Ok" />
    </RelativeLayout>

</FrameLayout>

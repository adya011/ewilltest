<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.change.ChangePIN2Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingRight="@dimen/margin_standar"
        android:paddingLeft="@dimen/margin_standar">

        <TextView
            style="@style/EditTextTitle"
            android:id="@+id/tv_pin_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Re-enter New Pin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_error_message"
            android:textColor="@color/button_standard"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_1"
                style="@style/etNumpad" />

            <EditText
                android:id="@+id/et_2"
                style="@style/etNumpad" />

            <EditText
                android:id="@+id/et_3"
                style="@style/etNumpad" />

            <EditText
                android:id="@+id/et_4"
                style="@style/etNumpad" />

            <EditText
                android:id="@+id/et_5"
                style="@style/etNumpad" />

            <EditText
                android:id="@+id/et_6"
                style="@style/etNumpad" />

        </LinearLayout>

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:columnCount="3">

            <Button
                android:id="@+id/btn_1"
                style="@style/NumpadPin"
                android:text="1" />

            <Button
                android:id="@+id/btn_2"
                style="@style/NumpadPin"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                style="@style/NumpadPin"
                android:text="3" />

            <Button
                android:id="@+id/btn_4"
                style="@style/NumpadPin"
                android:text="4" />

            <Button
                android:id="@+id/btn_5"
                style="@style/NumpadPin"
                android:text="5" />

            <Button
                android:id="@+id/btn_6"
                style="@style/NumpadPin"
                android:text="6" />

            <Button
                android:id="@+id/btn_7"
                style="@style/NumpadPin"
                android:text="7" />

            <Button
                android:id="@+id/btn_8"
                style="@style/NumpadPin"
                android:text="8" />

            <Button
                android:id="@+id/btn_9"
                style="@style/NumpadPin"
                android:text="9" />

            <Button
                android:id="@+id/btn_0"
                style="@style/NumpadPin"
                android:layout_column="1"
                android:text="0" />

            <Button
                android:id="@+id/btn_bckspc"
                style="@style/NumpadPin"
                android:layout_column="2"
                android:text="âŒ«" />
        </GridLayout>
        <Button
            android:id="@+id/btn_next"
            style="@style/ButtonStandard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="Ok" />
    </LinearLayout>

</FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_document" />

                <TextView
                    android:id="@+id/doc_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/icon2"
                    android:layout_alignTop="@id/icon2"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/icon2"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:text="ImageName.pdf" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_delete" />

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            style="@style/ButtonStandard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_standar_side"
            android:layout_marginRight="@dimen/margin_standar_side"
            android:text="Next" />

    </RelativeLayout>


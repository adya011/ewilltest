<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid android:color="@color/blue_sky"/>
            <corners
                android:radius="4dp" />
            <padding
                android:left="3dp"
                android:top="0dp"
                android:right="3dp"
                android:bottom="0dp" />
        </shape>
    </item>

    <item android:state_enabled="false" >
        <shape>
            <solid android:color="@color/button_standard_disabled"/>
            <corners
                android:radius="8dp" />
            <padding
                android:left="3dp"
                android:top="0dp"
                android:right="3dp"
                android:bottom="30dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/blue_sky"/>
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
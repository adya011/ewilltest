<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- normal -->
    <item>
        <shape>
            <solid android:color="#ffffff"/>
            <corners
                android:radius="4dp" />
            <padding
                android:left="12dp"
                android:top="4dp"
                android:right="12dp"
                android:bottom="4dp" />
            <stroke android:width="2px" android:color="@color/button_standard" />
        </shape>
    </item>

    <!-- pressed -->
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#d9d9d9"/>
            <corners
                android:radius="4dp" />
            <padding
                android:left="12dp"
                android:top="4dp"
                android:right="12dp"
                android:bottom="4dp" />
            <stroke android:width="2px" android:color="@color/button_standard" />
        </shape>
    </item>

    <!-- buton disabled -->
    <item android:state_enabled="false" >
        <shape>
            <solid android:color="#ffffff"/>
            <corners
                android:radius="4dp" />
            <padding
                android:left="12dp"
                android:top="4dp"
                android:right="12dp"
                android:bottom="4dp" />
            <stroke android:width="2px" android:color="@color/button_standard" />
        </shape>
    </item>
</selector>